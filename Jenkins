pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // This will clone the code from the GitHub repository
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                // Compile/build the code (replace this with your build command)
                sh 'mvn clean install'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests (replace this with your test command)
                sh 'mvn test'
            }
        }
    }

    post {
        always {
            echo 'Build finished!'
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
